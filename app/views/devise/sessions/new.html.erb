<div class="container">
  <div class="login-box">
    <div>
      <div class="login-form row">
        <div class="col-sm-12 text-center login-header">
          <i class="login-logo fa fa-database fa-5x"></i>
          <h4 class="login-title">ADMINISTRATOR</h4>
        </div>
        <div class="col-sm-12">
          <div class="login-body">
            <div class="progress hidden" id="login-progress">
              <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                Log In...
              </div>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="control">
                <%= f.input :email, autofocus: true, input_html: {class: 'form-control'} %>
                <%= f.input :password, input_html: {class: 'form-control'} %>
              </div>
              <div class="login-button text-center">
                <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>